@{
    ViewBag.Title = "AddG";
}
@using shopping.Models;
<style type="text/css">
     #left {
        width:200px;
        float:left;
    }
    #right {
        width:200px;
        float:right;
    }
    a {
        display:block;
        width:100px;
        height:30px;
        line-height:30px;
        text-decoration:none;
        float:left;
        font-size:10px;
        margin:0px;
    }
    #s_a a {
        color:red;
    }

    .left {
        width:400px;
        height:390px;
        text-align:center;
        margin-top:30px;
        float:left;
    }
    .right {
        width:400px;
        height:390px;
        text-align:center;
        margin-top:30px;
        float:left;
        position:relative;
    }
    .des {
        color:black;
        width:300px;
        height:50px;
        text-align:left;
        margin-left:10px;
    }
    .nm, .aj {
        float:left;
    }
    .nm {
        width:50px;
        height:30px;
        float:left;
        line-height:30px;
        clear:both;
    }
    .aj {
        height:30px;
        padding:0px;
        margin:0px;
        position:relative;
    }
    .in1 {
        position:absolute;
        top:0px;
        left:0px;
        text-align:center;
    }
    .in2 {
        position:absolute;
        top:0px;
        left:30px;
    }
    .in3 {
        position:absolute;
        top:0px;
        left:101px;
        text-align:center;
    }
    .kc {
        position:absolute;
        top:0px;
        left:138px;
    }
    .pp {
        position:absolute;
        bottom:30px;
        left:30px;
    }
    .price {
        float:left;
        margin-left:10px;
        color:red;
    }
    em {
        font-size:22px;
    }
</style>


@section top{
        <div id="left">
        <span id="s_a">@Html.ActionLink("亲，请登录", "login", "Member")</span>
          @Html.ActionLink("免费注册", "Register", "Member")
       </div>
       <div id="right">

                    @Html.ActionLink("我的购物车", "GWC0", "Home")
           </div>
    }
       @using (Html.BeginForm("GWC", "Home", new { id = @Model.Id }))
        {
  <div class="main">
    <div class="left">
        <img src="@Model.ImageUrl" width="400px" height="390px" />
    </div>
    <div class="right">
        <p class="des">@Model.Description</p>
            <p class="price">价格:@Model.Price</p>
        
            <div class="nm">
                数量
            </div>
            <div class="aj">
                <input type="button" value="-" style="width:30px;height:30px;" class="in1" id="inJ" onclick="shJ()"/>
                <input type="text" value="1" style="width:60px; height:20px;" class="in2" id="inText" name="intex"/>
                <input type="button" value="+" style="width:30px;height:30px;" class="in3" id="inA" onclick="shA()"/>
                <span class="kc">库存(<span class="mx" id="mmx">1000</span>件)</span>
            </div>
        <p class="pp">
            <b>+</b><input type="submit" value="加入购物车"/>
        </p>
    </div>
</div> 
}


