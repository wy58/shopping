<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style type="text/css">
        body {
            width:1002px;
            margin: 0 auto;
        }
        #top{
            width:100%;
            height:30px;
            background-color:gray;
            position:absolute;
            top:0px;
            left:0px;
            text-align:center;
        }
        #top_1 ,#foot_1{
            width:1002px;
            height:30px;
            margin:0 auto;
        }
        #bd {
            position:absolute;
            top:30px;
        }
        #foot {
            width:100%;
            height:30px;
            background-color:gray;
            position:fixed;
            bottom:0px;
            left:0px;
            text-align:center;
        }
    </style>
</head>
<body>
    <div id="top">
        <div id="top_1">
            @RenderSection("top",false)
        </div>
    </div>
    <div id="bd">
        @RenderBody()
    </div>
    <div id="foot">
        <div id="foot_1">
            @RenderPage("bottom.cshtml")
        </div>
    </div>
</body>
</html>
